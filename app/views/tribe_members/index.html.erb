<section class="jumbotron text-center jumbotron-img">
  <div class="container">
    
    <h1 class="jumbotron-heading white">Dynastipi</h1>
    <p class="lead white">Fais le tour de ta tribu et de tous leurs ancêtres, en 1 clic !</p>
    <p>
      <a href="#" class="btn btn-primary my-2">La liste</a>
      <a href="#" class="btn btn-secondary my-2">La carte</a>
    </p>
  </div>
</section>

<div class="container">
	<h4>Membres de la tribu </h4>
	<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
	  <thead>
	    <tr>
	      <th class="th-sm">Nom
	      </th>
	      <th class="th-sm">Prénom
	      </th>
	      <th class="th-sm">Date de naissance
	      </th>
	      <th class="th-sm">Ancêtre
	      </th>
	    </tr>
	  </thead>
	  <tbody>
	    <tr>
	    	<% @tribe_members.each do |member| %>
	      <td><%= member.name %></td>
	      <td><%= member.surname %></td>
	      <td><%= member.birthdate.strftime("%d/%m/%Y") %></td>
	      <td><%= member.ancestor%></td>
	    </tr>
	    <%end%>
	  </tbody>
	</table>
 	<%= paginate @tribe_members %>
</div>